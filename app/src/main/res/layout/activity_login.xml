<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guide"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginRight="20sp"
        android:layout_marginLeft="20sp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <merchant.com.our.merchant.view.PoppinsBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sign_in"
                android:textSize="18sp"
                android:textColor="@color/green"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/green"
                    android:layout_weight="3.5"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="0.2"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/green"
                    android:layout_weight="0.3"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <merchant.com.our.merchant.view.PoppinsBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agent_code"
                    android:layout_marginTop="20sp"/>
                <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/editAgentCode"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_rectangle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <merchant.com.our.merchant.view.PoppinsBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agent_phone_no"
                    android:layout_marginTop="20sp"/>
                <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/editAgentPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/grey_rectangle"/>

            </LinearLayout>
            <merchant.com.our.merchant.view.PoppinsButton
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="50dp"
                android:text="@string/login"
                android:background="@drawable/rectangle_green"
                android:textColor="@color/white"/>
        </LinearLayout>
        <include layout="@layout/template_progress"
            android:visibility="gone"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">
        <merchant.com.our.merchant.view.PoppinsLightTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/support1"/>
        <merchant.com.our.merchant.view.PoppinsBoldTextView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/green"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>