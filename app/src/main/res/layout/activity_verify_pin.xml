<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VerifyPinActivity">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guide"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_margin="14sp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20sp"
            android:layout_margin="20sp">

           <merchant.com.our.merchant.view.PoppinsBoldTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verify_pin"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center">

                  <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/pinChar1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2">
                    <requestFocus/>
                </merchant.com.our.merchant.view.PoppinsEditText>

                  <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/pinChar2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>

                  <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/pinChar3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>

                  <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/pinChar4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginLeft="12dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:inputType="numberPassword"
                    android:gravity="center"
                    android:maxLength="1"
                    android:ems="2"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">
               <merchant.com.our.merchant.view.PoppinsBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/forgotten_pin"/>
               <merchant.com.our.merchant.view.PoppinsBoldTextView
                   android:id="@+id/forgotten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/click_here"
                    android:textColor="@color/green"
                    android:textStyle="bold"/>
            </LinearLayout>

            <merchant.com.our.merchant.view.PoppinsButton
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="@string/submit"
                android:background="@drawable/rectangle_green"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginTop="70dp"/>
        </LinearLayout>

        <include layout="@layout/template_progress"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">
       <merchant.com.our.merchant.view.PoppinsLightTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textSize="12sp"
            android:text="@string/support1"/>
       <merchant.com.our.merchant.view.PoppinsBoldTextView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
           android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/green"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>