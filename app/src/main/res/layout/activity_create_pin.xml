<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreatePinActivity">


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guide"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4"/>
    <android.support.constraint.Guideline
        android:id="@+id/guide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1"/>
    <ScrollView
        android:id="@+id/scroller"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guide1"
        app:layout_constraintBottom_toTopOf="@+id/linear"
        app:layout_constraintVertical_bias="0.7">

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20sp"
            app:cardBackgroundColor="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="3sp"
                android:layout_marginLeft="14sp"
                android:layout_marginRight="14sp">


                <merchant.com.our.merchant.view.PoppinsBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_pin"
                    android:textSize="18sp"
                    android:textColor="@color/green"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        android:layout_weight="3.5"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@android:color/transparent"
                        android:layout_weight="0.2"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:background="@color/green"
                        android:layout_weight="0.3"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/imageFrame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <merchant.com.our.merchant.view.CircleImageView
                        android:id="@+id/imageAgentPhoto"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@mipmap/placeholder"/>
                    <ImageButton
                        android:id="@+id/photoButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src= "@drawable/ic_menu_camera1"
                        android:background="@drawable/circle"
                        android:scaleType="centerInside"
                        android:contentDescription="@string/app_name"
                        android:padding="8dp"
                        android:layout_gravity="bottom|end"/>

                </FrameLayout>
                <merchant.com.our.merchant.view.PoppinsBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/otp"
                    android:inputType="number"
                    android:layout_marginTop="10sp"/>
                <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/editOtp"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="6"
                    android:layout_height="48dp"
                    android:background="@drawable/grey_rectangle"/>
                <merchant.com.our.merchant.view.PoppinsBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:inputType="number"
                    android:text="@string/enter_4_digit_pin"/>
                <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/editPin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="number"
                    android:maxLength="4"
                    android:background="@drawable/grey_rectangle"/>
                <merchant.com.our.merchant.view.PoppinsBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/re_type_pin"
                    android:inputType="number"
                    android:layout_marginTop="10sp"/>
                <merchant.com.our.merchant.view.PoppinsEditText
                    android:id="@+id/editRe_Pin"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:maxLength="4"
                    android:layout_height="48dp"
                    android:background="@drawable/grey_rectangle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp">
                    <merchant.com.our.merchant.view.PoppinsBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/forgotten_access_code"/>
                    <merchant.com.our.merchant.view.PoppinsBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/click_here"
                        android:textColor="@color/green"
                        android:textStyle="bold"/>
                </LinearLayout>

                <merchant.com.our.merchant.view.PoppinsButton
                    android:id="@+id/buttonSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="@string/submit"
                    android:background="@drawable/rectangle_green"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAllCaps="false"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">
        <merchant.com.our.merchant.view.PoppinsLightTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support1"
            android:textSize="12sp"/>
        <merchant.com.our.merchant.view.PoppinsBoldTextView
            android:id="@+id/support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textSize="12sp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/green"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>