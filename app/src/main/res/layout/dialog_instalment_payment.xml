<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minWidth="310dp"
    android:minHeight="270dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageButton
        android:id="@+id/buttonClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
<merchant.com.our.merchant.view.PoppinsTextView
    android:id="@+id/text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@+id/buttonClose"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:padding="10dp"
    android:textAlignment="center"
    android:text="@string/text_instalment"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/enter_instalment_payment_amount"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp">
        <merchant.com.our.merchant.view.PoppinsEditText
            android:id="@+id/editInstalmentAmt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="number"/>
    </android.support.design.widget.TextInputLayout>

    <merchant.com.our.merchant.view.PoppinsButton
        android:id="@+id/buttonInstalment"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textInput"
        android:layout_margin="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/instalment_payment"
        android:textColor="@color/green"
        android:background="@drawable/line_rectangle_green"/>
</android.support.constraint.ConstraintLayout>