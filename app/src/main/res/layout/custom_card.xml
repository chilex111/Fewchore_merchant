<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/white"
        android:layout_margin="4dp">
        <merchant.com.our.merchant.view.PoppinsBoldTextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:textColor="@color/grey"/>

        <merchant.com.our.merchant.view.PoppinsLightTextView
            android:id="@+id/textCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:gravity="end"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text"
            android:layout_toRightOf="@+id/text"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <merchant.com.our.merchant.view.PoppinsBoldTextView
            android:id="@+id/text1"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_no"
            android:textColor="@color/grey"
            android:layout_below="@+id/text"/>

        <merchant.com.our.merchant.view.PoppinsLightTextView
            android:id="@+id/textCardNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text1"
            android:layout_toRightOf="@+id/text1"
            android:layout_below="@id/textCardType"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <merchant.com.our.merchant.view.PoppinsBoldTextView
            android:id="@+id/text3"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_no"
            android:textColor="@color/grey"
            android:layout_below="@+id/text1"/>

        <merchant.com.our.merchant.view.PoppinsLightTextView
            android:id="@+id/textExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text3"
            android:layout_toRightOf="@+id/text3"
            android:layout_below="@id/text1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <merchant.com.our.merchant.view.PoppinsBoldTextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cvv"
            android:layout_marginTop="16dp"
            android:textColor="@color/grey"
            android:layout_below="@+id/text3"/>

        <merchant.com.our.merchant.view.PoppinsLightTextView
            android:id="@+id/textCardCVV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_type"
            android:gravity="end"
            android:layout_marginTop="16dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/text2"
            android:layout_toRightOf="@+id/text2"
            android:layout_below="@id/text3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>