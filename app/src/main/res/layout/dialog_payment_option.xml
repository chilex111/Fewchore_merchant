<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:minHeight="200dp"
    android:minWidth="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <merchant.com.our.merchant.view.PoppinsButton
        android:id="@+id/buttonPayAll"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rectangle_green"
        android:text="@string/pay_all"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <merchant.com.our.merchant.view.PoppinsButton
        android:id="@+id/buttonInstalment"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/rectangle_green"
        android:text="@string/installment_payment"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="20sp"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonPayAll"/>
</android.support.constraint.ConstraintLayout>